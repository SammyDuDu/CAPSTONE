# Database Configuration
# Render will automatically inject this from the database service
DATABASE_URL=postgresql://user:password@host:port/database

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Application Settings
APP=main:app
UVICORN_BIN=uvicorn

# CORS Configuration (comma-separated origins)
# Example: https://kospa.example.com,https://app.example.com
ALLOWED_ORIGINS=*

# File Storage (for production)
# Options: local, s3
STORAGE_TYPE=local

# AWS S3 Configuration (if STORAGE_TYPE=s3)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=ap-southeast-1
# S3_BUCKET_NAME=kospa-analysis-plots

# Analysis Plot Storage Path (for local storage)
PLOT_OUTPUT_DIR=static/images/analysis
